{% extends 'dashboard.html.twig' %}

{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row ">
                <div class="col-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h4>Liste des commandes</h4>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Email</th>
                                        <th>Produit</th>
                                        <th>Quantité</th>
                                        <th>Prix</th>
                                        <th>Actions</th>
                                    </tr>
                                    {% for commande in commandes %}
                                        <tr>
                                            <td>{{ commande.id }}</td>
                                            <td>{{ commande.nom }}</td>
                                            <td>{{ commande.prenom }}</td>
                                            <td>{{ commande.email }}</td>
                                            <td>{{ commande.produit }}</td>
                                            <td>{{ commande.qte }}</td>
                                            <td>{{ commande.prix }}</td>

                                            <td><form method="post" action="{{ path('supprimer_commandes', {'id': commande.id}) }}" onsubmit="return confirm('Confirmez-vous la suppression ?');">
                                                    <div style="margin-left: auto; margin-right: auto;">
                                                        <a href="{{ path('modifier_utilisateur', {'id': commande.id}) }}"><i class="mdi mdi-tooltip-edit"></i></a>
                                                        <button class="text-danger" style="font-size: 14px;background:none; border:none;margin:0;padding:0;cursor: pointer;text-decoration: underline red;" class="btn" type="submit"><i class="mdi mdi-delete"></i></button></td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3">Aucune commande n'a été trouvée</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
